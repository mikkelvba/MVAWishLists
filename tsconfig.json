{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": false,
        "noImplicitAny": false,
        "sourceMap": true
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "meteorCompilerOptions": {
        "atom": {
            "rewriteTsconfig": true
        },
        "compileOnSave": false,
        "buildOnSave": false,
        "compilerOptions": {
            "target": "es5",
            "module": "commonjs",
            "moduleResolution": "classic",
            "experimentalDecorators": true
        },
        "filesGlob": [
            "**/*.ts"
        ],
        "files": []
    }
}
